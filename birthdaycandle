#include<iostream>
using namespace std;
int main()
{
    float n,arr[50],cm=0,cp=0,cz=0;
    float a,b,c;
    cin>>n;
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    for(int i=0;i<n;i++)
    {
        if(arr[i]>0)
        cp++;
        else if(arr[i]==0)
        cz++;
        else if(arr[i]<0) 
        cm++;
            
    }
    a=cp/n;b=cm/n;c=cz/n;
    cout<<a<<'\n'<<b<<'\n'<<c;
    return 0;
}
